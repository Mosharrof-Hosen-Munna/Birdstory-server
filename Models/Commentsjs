const { Schema, model } = require("mongoose");

const commentSchema = new Schema({
  text: {
    type: String,
    trim: true,
    required: true,
  },
  author: {
    type: Schema.Types.ObjectId,
    ref: "User",
    required: true,
  },
  commentLikes: [
    {
      type: Schema.type.ObjectId,
      ref: "User",
    },
  ],
  commentDislikes: [
    {
      type: Schema.type.ObjectId,
      ref: "User",
    },
  ],
  replies: [
    {
      type: Schema.type.ObjectId,
      ref: "User",
    },
  ],
});

const Comment = model("Comment", commentSchema);

module.exports = Comment;
